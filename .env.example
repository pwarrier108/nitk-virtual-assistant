# NITK Virtual Assistant - Environment Configuration
# Copy this file to '.env' and fill in your actual values
# NEVER commit the .env file to git!

# ============================================================================
# API KEYS - REQUIRED
# ============================================================================

# OpenAI API Key (Required for RAG service)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-openai-api-key-here

# Perplexity API Key (Optional - for temporal/current information queries)
# Get your key from: https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=pplx-your-perplexity-api-key-here

# ============================================================================
# SERVICE CONFIGURATION
# ============================================================================

# Debug Mode (set to False in production)
DEBUG=True

# Log Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================================================
# RAG SERVICE SETTINGS
# ============================================================================

# RAG Service Host (use 0.0.0.0 to allow network access)
RAG_SERVICE_HOST=0.0.0.0

# RAG Service Port
RAG_SERVICE_PORT=8000

# RAG Service URL (for clients to connect)
RAG_SERVICE_URL=http://localhost:8000

# ============================================================================
# WEB UI SETTINGS
# ============================================================================

# Web UI Port (Streamlit default is 8501)
WEB_UI_PORT=8501

# Translation Provider (google, deepl, libre)
TRANSLATION_PROVIDER=google

# ============================================================================
# ROBOT SETTINGS
# ============================================================================

# Default Audio Port (for TonyPi robot)
DEFAULT_PORT=/dev/ttyUSB0

# Default Volume (0-100)
DEFAULT_VOLUME=80

# Wake Word Detection Sensitivity (0.0-1.0)
WAKE_WORD_SENSITIVITY=0.7

# ============================================================================
# GOOGLE CLOUD SETTINGS (Optional)
# ============================================================================

# Google Cloud credentials file path
# Required only if using Google Cloud services (Speech-to-Text, TTS, etc.)
GOOGLE_APPLICATION_CREDENTIALS=nitk-virtual-assistant-XXXXX.json

# Google Cloud Project ID
# GOOGLE_CLOUD_PROJECT=your-project-id

# ============================================================================
# CHROMA DB SETTINGS
# ============================================================================

# ChromaDB Path (relative to project root)
CHROMA_PATH=outputs/chroma_db

# ChromaDB Collection Name
COLLECTION_NAME=nitk_knowledgebase

# ============================================================================
# EMBEDDING & AI MODEL SETTINGS
# ============================================================================

# Sentence Transformer Model for Embeddings
EMBEDDING_MODEL=all-MiniLM-L6-v2

# OpenAI Model for Response Generation
OPENAI_MODEL=gpt-4o-mini

# Temperature for AI Responses (0.0-1.0, lower = more deterministic)
TEMPERATURE=0.4

# ============================================================================
# CACHE SETTINGS
# ============================================================================

# Cache Directory
CACHE_DIR=cache

# Cache Maximum Age (in days)
CACHE_MAX_AGE_DAYS=7

# Cache Maximum Size (in GB)
CACHE_MAX_SIZE_GB=1

# Cache Cleanup Interval (in hours)
CACHE_CLEANUP_INTERVAL_HOURS=24

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# CORS Allowed Origins (comma-separated, use * for development only)
# In production, specify exact origins: http://localhost:3000,http://192.168.1.100:8501
CORS_ALLOW_ORIGINS=*

# Allow Credentials in CORS requests
CORS_ALLOW_CREDENTIALS=true

# ============================================================================
# DATA PIPELINE SETTINGS (Optional)
# ============================================================================

# Instagram Data Source
INSTAGRAM_INPUT_DIR=outputs/instagram

# LinkedIn Data Source
LINKEDIN_INPUT_DIR=outputs/linkedin

# Website Data Source
WEBSITE_INPUT_DIR=outputs/website

# Chunk Target Size (in characters)
CHUNK_TARGET_SIZE=512

# Chunk Overlap Size (in characters)
CHUNK_OVERLAP=100

# ============================================================================
# SOCIAL MEDIA API SETTINGS (Optional - for data collection)
# ============================================================================

# LinkedIn Session Cookies (stored in linkedin_cookies.json - not here)
# LINKEDIN_SESSION_COOKIE=

# Instagram API Token (if using official API)
# INSTAGRAM_ACCESS_TOKEN=

# ============================================================================
# MONITORING & TELEMETRY
# ============================================================================

# Disable ChromaDB Telemetry
ANONYMIZED_TELEMETRY=False

# Enable Results Logging
RESULTS_LOG=true

# Results File Path
RESULTS_FILE=results/rag_queries.jsonl

# ============================================================================
# NOTES
# ============================================================================

# 1. Copy this file to '.env' in the project root
# 2. Fill in your actual API keys and credentials
# 3. Never commit the .env file to version control
# 4. Keep your .env file secure and backed up safely
# 5. For production deployment, use environment variables or secrets management
